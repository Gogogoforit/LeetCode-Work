//再是java部分。
public class Solution {
    public int[] constructRectangle(int area) {
        int j,MinGap,Gap;
        MinGap= Gap =area;
        int p[]= new int[2];
        int i;
        
        for(i=(int)Math.sqrt(area); i<=area;i++)
        {
            if(area%i == 0)
            {
                j = area/i;
                Gap = i-j;
                if( Gap <= MinGap)
                {
                    MinGap = Gap;
                    (i>=j)?(p[0]= i):(p[0]= j);
                    (i>=j)?(p[1]= j):(p[1]= i);
                }
            } 
        }    
        return p;      
    }
}
